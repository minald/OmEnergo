@model Stabilizer
@{
    ViewData["Title"] = Model.Series;
}

<h3 class="text-center">@Model.Series</h3>
<p>@Model.LongDescription</p>
<div class="row">
    @await Component.InvokeAsync("PropertyTable", new { model = Model, propertyNames = new[]
        { "StabilizationType", "StabilizationAccuracy", "PhasesAmount", "InputVoltageRange", "AllowableDurableOverload", "InstallationType" } })
    @await Component.InvokeAsync("PropertyTable", new { model = Model, propertyNames = new[]
        { "SwitchingTime", "Indication", "WorkingTemperature", "ImplementedProtections", "AdjustableDelay", "BypassMode" } })
</div>
<div class="row justify-content-center">
    @foreach (var stabilizerModel in Model.Models)
    {
        <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-header">
                    <p class="h3 text-center">@stabilizerModel.Name</p>
                </div>
                <div class="card-body">
                    <img class="card-img-top" src="@stabilizerModel.GetImageFullLink()">
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Номинальная мощность: @stabilizerModel.NominalPower</li>
                    <li class="list-group-item">Подключение в сеть: @stabilizerModel.NetworkConnection</li>
                    <li class="list-group-item">Подключение нагрузки: @stabilizerModel.LoadConnection</li>
                    <li class="list-group-item">Габариты: @stabilizerModel.Dimensions мм</li>
                    <li class="list-group-item">Вес: @($"{stabilizerModel.Weight:F1}") кг</li>
                </ul>
                <div class="card-footer">
                    <h4 class="text-center price">
                        @stabilizerModel.GetPriceIntegerPart()<sup>@stabilizerModel.GetStringPriceFractionalPart()</sup>
                    </h4>
                </div>
            </div>
        </div>
    }
</div>
