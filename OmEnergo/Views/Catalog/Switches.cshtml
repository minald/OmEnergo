@model List<Switch>
@{
   ViewData["Title"] = "Выключатели и переключатели";
}

<div class="row justify-content-center">
    @foreach (var switcher in Model)
    {
        <a asp-controller="Catalog" asp-action="@switcher.Product.EnglishName" asp-route-series="@switcher.Series.Replace(" ","_")" class="col-sm-6 col-md-4 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-header">
                    <p class="h3 text-center">@switcher.Series</p>
                </div>
                <div class="card-body">
                    <img class="card-img-top" src="@switcher.GetImageFullLink()">
                </div>
            </div>
        </a>
    }
</div>
