    <ul id="imagegallery">
        <li data-thumb="/images/s14-250.jpg" data-src="/images/s14.jpg" style="height: 200px">
            <img src="/images/s14.jpg" class="fit-image" />
        </li>
        <li data-thumb="/images/s15-250.jpg" data-src="/images/s15.jpg" style="height: 200px">
            <img src="/images/s15.jpg" class="fit-image" />
        </li>
        <li data-thumb="/images/s16-250.jpg" data-src="/images/s16.jpg" style="height: 200px">
            <img src="/images/s16.jpg" class="fit-image" />
        </li>
        <li data-thumb="/images/s17-250.jpg" data-src="/images/s17.jpg" style="height: 200px">
            <img src="/images/s17-250.jpg" class="fit-image" />
        </li>
        <li data-thumb="/images/s19-250.jpg" data-src="/images/s19.jpg" style="height: 200px">
            <img src="/images/s19-250.jpg" class="fit-image" />
        </li>
        <li data-thumb="/images/s23-250.jpg" data-src="/images/s23.jpg" style="height: 200px">
            <img src="/images/s23-250.jpg" class="fit-image" />
        </li>
    </ul>
    <a data-toggle="modal" data-target="#carousel@(Model.EnglishName)">
        <img class="card-img border border-secondary bg-white" src="@Model.GetMainImageThumbnailPath(250)" alt="@Model.Name">
    </a>
    <div id="carousel@(Model.EnglishName)" class="modal fade">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Model.Name</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-secondary">
                    <div id="carouselControls@(Model.EnglishName)" class="carousel slide"
                         data-ride="carousel" data-interval="false">
                        <div class="carousel-inner">
                            @foreach (var fullPath in paths)
                            {
                                string path = FileManager.GetRelativePath(fullPath);
                                <div class="carousel-item h-400px @(path == Model.GetMainImagePath() ? "active" : "")">
                                    <img src="@path" class="d-block fit-image" alt="@Model.Name">
                                </div>
                            }
                        </div>
                        @if (paths.Count > 1)
                        {
                            <a class="carousel-control-prev" href="#carouselControls@(Model.EnglishName)" role="button" data-slide="prev" title="Предыдущее фото">
                                <span class="carousel-control-prev-icon bg-secondary" aria-hidden="true"></span>
                            </a>
                            <a class="carousel-control-next" href="#carouselControls@(Model.EnglishName)" role="button" data-slide="next" title="Следующее фото">
                                <span class="carousel-control-next-icon bg-secondary" aria-hidden="true"></span>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
