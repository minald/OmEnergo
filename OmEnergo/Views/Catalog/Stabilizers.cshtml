@model List<Stabilizer>
@{
    ViewData["Title"] = "Стабилизаторы";
}

<div class="row justify-content-center">
    @foreach (var stabilizer in Model)
    {
        <a asp-controller="Catalog" asp-action="@stabilizer.Product.EnglishName" asp-route-series="@stabilizer.Series.Replace(" ","_")" class="col-sm-6 col-md-4 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-header">
                    <p class="h3 text-center">@stabilizer.Series</p>
                </div>
                <div class="card-body">
                    <img class="card-img-top" src="@stabilizer.GetImageFullLink()">
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><p>Тип: @stabilizer.StabilizationType</p></li>
                    <li class="list-group-item"><p>Диапазон: @stabilizer.InputVoltageRange</p></li>
                </ul>
            </div>
        </a>
    }
</div>
