@model List<Stabilizer>
@{
    ViewData["Title"] = "Стабилизаторы";
}

<div class="row justify-content-center">
    @foreach (var stabilizer in Model)
    {
        <a asp-controller="Catalog" asp-action="@stabilizer.Product.EnglishName" asp-route-series="@stabilizer.Series.Replace(" ","_")" class="col-sm-6 col-md-4 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-header">
                    <p class="h3 text-center">@stabilizer.Series</p>
                </div>
                <div class="card-body">
                    <img class="card-img-top" src="~/images/@stabilizer.Product.EnglishName/@stabilizer.MainImageLink">
                </div>
                <div class="card-footer">
                    <p>Тип: @stabilizer.StabilizationType</p>
                    <p>Диапазон: @stabilizer.InputVoltageRange</p>
                </div>
            </div>
        </a>
    }
</div>
