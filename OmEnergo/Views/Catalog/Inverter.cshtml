@model Inverter
@{
    ViewData["Title"] = Model.Series;
}

<h3 class="text-center">@Model.Series</h3>
<p>    @Model.LongDescription</p>
<div class="row">
    <div class="col-6">
        <table class="table table-light table-bordered table-hover">
            <tbody>
                @await Component.InvokeAsync("ProductProperty", new { model = Model, propertyName = "OutputVoltageRange" })
                @await Component.InvokeAsync("ProductProperty", new { model = Model, propertyName = "PhasesAmount" })
                @await Component.InvokeAsync("ProductProperty", new { model = Model, propertyName = "FrequencyOfOutputVoltage" })
                @await Component.InvokeAsync("ProductProperty", new { model = Model, propertyName = "Efficiency" })
            </tbody>
        </table>
    </div>
    <div class="col-6">
        <table class="table table-light table-bordered table-hover">
            <tbody>
                @await Component.InvokeAsync("ProductProperty", new { model = Model, propertyName = "SwitchingTime" })
                @await Component.InvokeAsync("ProductProperty", new { model = Model, propertyName = "Indication" })
                @await Component.InvokeAsync("ProductProperty", new { model = Model, propertyName = "CoolingMethod" })
                @await Component.InvokeAsync("ProductProperty", new { model = Model, propertyName = "WorkingTemperature" })
            </tbody>
        </table>
    </div>
</div>
<div class="row justify-content-center">
    @foreach (var inverterModel in Model.Models)
    {
        <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-header">
                    <p class="h3 text-center">@inverterModel.Name</p>
                </div>
                <div class="card-body">
                    <img class="card-img-top" src="@inverterModel.GetImageFullLink()">
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Габариты: @inverterModel.Dimensions мм</li>
                    <li class="list-group-item">Вес: @($"{inverterModel.Weight:F1}") кг</li>
                </ul>
                <div class="card-footer">
                    <h4 class="text-center price">
                        @inverterModel.GetPriceIntegerPart()<sup>@inverterModel.GetStringPriceFractionalPart()</sup>
                    </h4>
                </div>
            </div>
        </div>
    }
</div>
