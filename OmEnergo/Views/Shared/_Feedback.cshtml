@model EmailMessage
@{
    ViewData["Title"] = "Feedback";
}

<div class="offset-3">
	<h2 class="ml-4px">Ваше сообщение:</h2>
</div>

<form method="post" asp-action="Feedback" class="needs-validation" novalidate>
	<div class="row m-2">
		<label class="col-3 text-right" asp-for="Name">* Имя:</label>
		<input class="col-4 form-control form-check" type="text" asp-for="Name" required />
		<div class=" col-1 valid-feedback">&#10004;</div>
		<div class="col-2 invalid-feedback">
			Не указано имя
		</div>
	</div>
	<div class="row m-2">
		<label class="col-3 text-right" asp-for="Email">* Email:</label>
		<input class="col-4 form-control" type="email" asp-for="Email" required />
		<div class=" col-1 valid-feedback">&#10004;</div>
		<div class="col-3 invalid-feedback">
			Введите верный email
		</div>
	</div>
	<div class="row m-2">
		<label class="col-3 text-right" asp-for="PhoneNumber">Телефон:</label>
		<input id="phone" class="col-4 form-control" type="text" asp-for="PhoneNumber" />
		<div class="col-1 valid-feedback">&#10004;</div>
	</div>
	<div class="row m-2">
		<label class="col-3 text-right" asp-for="Text">* Сообщение:</label>
		<textarea class="col-7  form-control" style="height: 150px" asp-for="Text" required></textarea>
		<div class=" col-1 valid-feedback">&#10004;</div>
		<div class="col-2 invalid-feedback">
			Не указан текст
		</div>
	</div>
	<div class="offset-3">
		<button class="btn btn-primary ml-4px" type="submit">Отправить</button>
	</div>
</form>

<script type="text/javascript">
	(function () {
		'use strict';
		window.addEventListener('load', function () {
			var forms = document.getElementsByClassName('needs-validation');
			var validation = Array.prototype.filter.call(forms, function (form) {
				form.addEventListener('submit', function (event) {
					if (form.checkValidity() === false) {
						event.preventDefault();
						event.stopPropagation();
					}
					form.classList.add('was-validated');
				}, false);
			});
		}, false);
	})();
</script>
