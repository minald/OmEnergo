<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <link rel="stylesheet" href="~/css/shieldui-all.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/shieldui-all.min.js"></script>
</head>
<body>
    <mini-profiler />
    <header>
        <div class="row">
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                <h1>ООО "ОмЭнерго"</h1>
                <h4>Электротехническая компания</h4>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <p class="m-0">
                    Тел/факс: (+375-17) 248-77-45<br>
                    Velcom: (+375-29) 341-31-35<br>
                    МТС: (+375-29) 560-01-79<br>
                    E-mail: info@omenergo.by<br />
                    <a asp-controller="Home" asp-action="Contacts" asp-fragment="feedback">Обратная связь</a>

                </p>
            </div>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div id="header" class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">Главная</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a asp-controller="Catalog" asp-action="Index" class="nav-item nav-link">Каталог</a>
                    <a asp-controller="Home" asp-action="About" class="nav-item nav-link">О компании</a>
                    <a asp-controller="Home" asp-action="Payment" class="nav-item nav-link">Оплата</a>
                    <a asp-controller="Home" asp-action="Delivery" class="nav-item nav-link">Доставка</a>
                    <a asp-controller="Home" asp-action="Contacts" class="nav-item nav-link">Контакты</a>
                </div>
            </div>
        </div>
        <form asp-controller="Catalog" asp-action="Search" class="input-group search">
            <input name="searchString" class="form-control">
            <div class="input-group-append">
                <button class="input-group-text" type="submit"><img src="~/images/search-solid.svg"/></button>
            </div>
        </form>
    </nav>
    <div class="body-content">
        <div class="row">
            <div class="col-3">
                @(await Component.InvokeAsync("TreeViewMenu"))
            </div>
            <div class="col-9">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show text-center" role="alert">
                        @TempData["message"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; 2018 - ООО "ОмЭнерго"</p>
        </footer>
    </div>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
