@model IEnumerable<CommonProductModel>

<h3 class="text-center">@ViewData["Title"]</h3>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>Название</th>
        <th>Цена</th>
        <th>Действия</th>
    </tr>
    @foreach (var productModel in Model)
    {
        <tr>
            <td>@productModel.Name</td>
            <td>@productModel.Price</td>
            <td>
                <a asp-controller="Admin" asp-action="EditProductModel" asp-route-id="@productModel.Id" 
                    class="btn btn-info">Изменить</a>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-controller="Admin" asp-action="CreateProductModel" class="btn btn-primary">Создать</a>
</div>
