@model IEnumerable<Section>

<h3 class="text-center">Секции</h3>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>#</th>
        <th>Название</th>
        <th>Ссылка на фото</th>
        <th>Описание</th>
        <th>Действия</th>
    </tr>
    @foreach (var mainSection in Model)
    {
        <tr>
            <td>@mainSection.SequenceNumber</td>
            <td>
                <a asp-controller="Admin" asp-action="Products" asp-route-sectionName="@mainSection.Name">
                    @mainSection.Name
                </a>
            </td>
            <td>@mainSection.MainImageLink</td>
            <td>@mainSection.Description</td>
            <td>
                <a asp-controller="Admin" asp-action="EditSection" asp-route-id="@mainSection.Id" 
                   class="btn btn-info">Изменить</a>
                @if (!mainSection.HasChildSections())
                {
                    @Html.Partial("_DeleteButtonWithPopup", mainSection)
                }
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-controller="Admin" asp-action="CreateSection" class="btn btn-primary">Создать</a>
</div>
