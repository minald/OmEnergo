@model Section

<form asp-action="CreateOrEditSection" method="post">
    <input type="hidden" asp-for="Id">
    <input type="hidden" name="parentSectionId" value="@(Model.ParentSection?.Id)">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label text-right"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MainImageLink" class="col-sm-2 col-form-label text-right"></label>
        <div class="col-sm-10">
            <input asp-for="MainImageLink" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label text-right"></label>
        <div class="col-sm-10">
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a asp-action="Sections" class="btn btn-primary">Отмена</a>
    </div>
</form>
