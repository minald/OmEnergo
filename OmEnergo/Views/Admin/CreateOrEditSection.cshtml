@model Section

<form asp-action=@(Model.Id == 0 ? "CreateSection" : "EditSection") method="post">
    <input hidden asp-for="Id">
    <input hidden name="parentSectionId" value="@(Model.ParentSection?.Id)">
    <input hidden asp-for="SequenceNumber">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label text-right"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MainImageLink" class="col-sm-2 col-form-label text-right"></label>
        <div class="col-sm-10">
            <input asp-for="MainImageLink" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProductProperties" class="col-sm-2 col-form-label text-right"></label>
        <div class="col-sm-10">
            <textarea asp-for="ProductProperties" rows="3" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProductModelProperties" class="col-sm-2 col-form-label text-right"></label>
        <div class="col-sm-10">
            <textarea asp-for="ProductModelProperties" rows="3" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label text-right"></label>
        <div class="col-sm-10">
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        @if (Model.IsMainSection())
        {
            <a asp-action="Sections" class="btn btn-secondary">Отмена</a>
        }
        else
        {
            <a asp-action="Section" asp-route-id="@Model.ParentSection.Id" class="btn btn-secondary">Отмена</a>
        }
    </div>
</form>
