@model Section

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

<h4 class="text-center">@(Model.ParentSection?.Name ?? "Главные секции")</h4>
<form asp-action=@(Model.Id == 0 ? "CreateSection" : "EditSection")
	  asp-route-parentSectionId="@Model.ParentSection?.Id" method="post">
	<partial name="_CreateOrEditFormCommonObjectProperties" model="@Model" />
	<div class="form-group row">
		<label asp-for="ProductProperties" class="col-sm-2 col-form-label text-right"></label>
		<div class="col-sm-10">
			<label class="text-danger">Аккуратно! Удаление или переименование свойств повлечёт удаление соответствующих свойств у продуктов и моделей!</label>
			<textarea asp-for="ProductProperties" rows="3" class="form-control"></textarea>
			<small class="form-text text-muted">Свойства должны быть разделены точками с запятой, например "Длина;Ширина;Высота"</small>
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="ProductModelProperties" class="col-sm-2 col-form-label text-right"></label>
		<div class="col-sm-10">
			<label class="text-danger">Аккуратно! Удаление или переименование свойств повлечёт удаление соответствующих свойств у продуктов и моделей!</label>
			<textarea asp-for="ProductModelProperties" rows="3" class="form-control"></textarea>
			<small class="form-text text-muted">Свойства должны быть разделены точками с запятой, например "Длина;Ширина;Высота"</small>
		</div>
	</div>
	<div class="text-center">
		<button class="btn btn-primary" type="submit">Сохранить</button>
		@if (Model.IsMainSection())
		{
			<a asp-action="Sections" class="btn btn-secondary">Отмена</a>
		}
		else
		{
			<a asp-action="Section" asp-route-id="@Model.ParentSection.Id" class="btn btn-secondary">Отмена</a>
		}
	</div>
</form>
